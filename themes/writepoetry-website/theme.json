							]
						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "italic",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/source-code-pro/source-code-pro-700-italic.woff2"
							]
						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "italic",
							"fontWeight": "800",
							"src": [
								"file:./assets/fonts/source-code-pro/source-code-pro-800-italic.woff2"
							]
						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "italic",
							"fontWeight": "900",
