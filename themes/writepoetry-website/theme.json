						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "normal",
							"fontWeight": "700",
							"src": [
								"file:./assets/fonts/source-code-pro/source-code-pro-700-normal.woff2"
							]
						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "normal",
							"fontWeight": "800",
							"src": [
								"file:./assets/fonts/source-code-pro/source-code-pro-800-normal.woff2"
							]
						},
						{
