{
    "version": 3,
    "$schema": "https://schemas.wp.org/wp/6.6/theme.json",
    "settings": {
        "color": {
            "palette": [
                {
                    "color": "#EEEEEE",
                    "name": "Base",
                    "slug": "base"
                },
                {
                    "color": "#361C1C",
                    "name": "Contrast",
                    "slug": "contrast"
                },
                {
                    "color": "#FA6900",
                    "name": "Primary",
                    "slug": "primary"
                },
                {
                    "color": "#473BF0",
                    "name": "Secondary",
                    "slug": "secondary"
                }
            ]
        },
		"custom": {
			"coreMediaText": {
				"borderRadius": "8px"
			}
		},
		"layout": {
			"contentSize": "800px"
		},
        "typography": {
			"fontFamilies": [
