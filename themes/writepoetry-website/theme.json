							]
						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "italic",
							"fontWeight": "300",
							"src": [
								"file:./assets/fonts/source-code-pro/source-code-pro-300-italic.woff2"
							]
						},
						{
							"fontFamily": "\"Source Code Pro\"",
							"fontStyle": "italic",
